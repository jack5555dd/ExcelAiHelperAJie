<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="tabAi" label="AI 助手">
        <!-- 右侧面板组 -->
        <group id="grpPanel" label="面板">
          <button id="btnChatPane" label="AI 聊天" size="large" onAction="OnChatPaneClick" imageMso="Chat" />
        </group>
        
        <!-- 工具箱组 -->
        <group id="grpToolbox" label="工具箱">
          <menu id="menuToolbox" label="工具箱" size="large" imageMso="ToolsOptions">
            <menu id="menuDataTools" label="数据工具">
              <button id="btnDataAnalysis" label="数据分析" onAction="OnDataAnalysisClick" imageMso="ChartInsert" />
              <button id="btnDataClean" label="数据清洗" onAction="OnDataCleanClick" imageMso="TableStyleMedium9" />
              <button id="btnDataImport" label="数据导入" onAction="OnDataImportClick" imageMso="ImportExcel" />
            </menu>
            <menu id="menuFormatTools" label="格式工具">
              <button id="btnAutoFormat" label="智能格式化" onAction="OnAutoFormatClick" imageMso="ConditionalFormattingMenu" />
              <button id="btnStyleApply" label="样式应用" onAction="OnStyleApplyClick" imageMso="FormatPainter" />
              <button id="btnTableFormat" label="表格美化" onAction="OnTableFormatClick" imageMso="TableStylesGallery" />
            </menu>
            <menu id="menuFormulaTools" label="公式工具">
              <button id="btnFormulaHelper" label="公式助手" onAction="OnFormulaHelperClick" imageMso="FunctionWizard" />
              <button id="btnFormulaCheck" label="公式检查" onAction="OnFormulaCheckClick" imageMso="FormulaAuditing" />
              <button id="btnFormulaOptimize" label="公式优化" onAction="OnFormulaOptimizeClick" imageMso="Calculate" />
            </menu>
          </menu>
        </group>
        
        <!-- 聚光灯组 -->
        <group id="grpSpotlight" label="聚光灯">
          <button id="btnSpotlight" 
                  label="Spotlight" 
                  size="large" 
                  onAction="OnSpotlightClick" 
                  imageMso="Lightbulb" 
                  tag="toggle" />
        </group>
        
        <!-- 设置和帮助组 -->
        <group id="grpSettings" label="设置">
          <button id="btnSettings" label="设置" size="large" onAction="OnSettingsClick" imageMso="Options" />
          <button id="btnExamples" label="示例" size="large" onAction="OnExamplesClick" imageMso="Help" />
          <button id="btnAbout" label="关于" size="large" onAction="OnAboutClick" imageMso="Info" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>